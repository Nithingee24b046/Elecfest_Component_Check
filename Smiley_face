#include <MD_MAX72xx.h>
#include <SPI.h>

// Define hardware type and connections
#define HARDWARE_TYPE MD_MAX72XX::FC16_HW
#define MAX_DEVICES 1

#define DATA_PIN   23
#define CLK_PIN    18
#define CS_PIN     5

MD_MAX72XX mx = MD_MAX72XX(HARDWARE_TYPE, DATA_PIN, CLK_PIN, CS_PIN, MAX_DEVICES);

// Joystick pins
const int Vrx = 34;
const int Vry = 35;
const int Button = 32;

String current = "Center";
String last = "Center";
String lastFace = "faceUp"
String currentFace = "faceUp"

// Face looking up
uint8_t faceUp[8] = {
  B00111100,
  B01000010,
  B10100101,
  B10000001,
  B10000001,
  B10100101,
  B01011010,
  B00111100
};

// Face looking down
uint8_t faceDown[8] = {
  B00111100,
  B01011010,
  B10100101,
  B10000001,
  B10000001,
  B10100101,
  B01000010,
  B00111100
};

// Face looking left
uint8_t faceLeft[8] = {
  B00111100,
  B01000010,
  B10100101,
  B11000001,
  B11000001,
  B10100101,
  B01000010,
  B00111100
};

// Face looking right
uint8_t faceRight[8] = {
  B00111100,
  B01000010,
  B10100101,
  B10000011,
  B10000011,
  B10100101,
  B01000010,
  B00111100
};

// Draw face function
void drawFace(uint8_t face[]) {
  mx.clear();
  for (uint8_t row = 0; row < 8; row++) {
    mx.setRow(0, row, face[row]);
  }
}

void setup() {
  Serial.begin(115200);

  mx.begin();
  mx.control(MD_MAX72XX::INTENSITY, 5);  // Optional: Set brightness (0-15)
  mx.clear();

  pinMode(Button, INPUT_PULLUP);
  drawFace(faceUp);  // Initial face
}

void loop() {
  int xValue = analogRead(Vrx);
  int yValue = analogRead(Vry);
  int swState = digitalRead(Button);

  bool inCenterZone = (xValue >= 2600 && xValue <= 2900) && (yValue >= 2600 && yValue <= 2900);
  int xDeviation = xValue - 2750;
  int yDeviation = yValue - 2750;

  // Determine direction
  if (inCenterZone) {
    current = "Center";
  } else if (abs(xDeviation) > abs(yDeviation)) {
    current = (xDeviation > 0) ? "Right" : "Left";
  } else {
    current = (yDeviation > 0) ? "Up" : "Down";
  }

  // Update face only if direction changes
  if (current != last) {
    Serial.print("X: "); Serial.print(xValue);
    Serial.print(" | Y: "); Serial.print(yValue);
    Serial.print(" | Direction: "); Serial.print(current);

    if (swState == LOW) {
      Serial.print(" | Button Pressed");
    }

    Serial.println();

    if (currentFace == "faceUp"){
      if (current == "Right") {
      drawFace(faceRight);
      } else if (current == "Left") {
      drawFace(faceLeft);
      } else if (current == "Down") {
      drawFace(faceDown);
      }
    } else if (currentFace == "faceRight"){
      if (current == "Right") {
      drawFace(faceDown);
      } else if (current == "Left") {
      drawFace(faceUp);
      } 
    } else if (currentFace == "faceLeft"){
      if (current == "Right") {
      drawFace(faceUp);
      } else if (current == "Right") {
      drawFace(faceDown);
      } 
    } else if (currentFace == "faceDown"){
      if (current == "Right") {
      drawFace(faceLeft);
      } else if (current == "Left") {
      drawFace(faceRight);
      } else if (current == "Up") {
      drawFace(faceUp);
      } 
    } 

    last = current;
  }

  delay(50);
}
